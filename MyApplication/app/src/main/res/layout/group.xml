<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Poll: What game do you want to play this week?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"/>
    <CheckBox
        android:id="@+id/groupCheckBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        />
    <CheckBox
        android:id="@+id/groupCheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupCheckBox1"

        />
    <CheckBox
        android:id="@+id/groupCheckBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupCheckBox2"

        />

    <CheckBox
        android:id="@+id/groupCheckBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupCheckBox3"
        android:layout_marginBottom="25dp"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupOther"
        android:layout_toRightOf="@id/groupCheckBox4"
        android:layout_below="@id/groupCheckBox3"
        android:singleLine="true"
        android:hint="Check to Enter New Game"
        android:layout_alignBaseline="@id/groupCheckBox4"
        android:background="#00000000"
        android:enabled="false"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification1"
        android:layout_below="@id/groupCheckBox4"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="#21384723"
        android:gravity="center_horizontal"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification2"
        android:layout_below="@id/notification1"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="#21384723"

        android:gravity="center_horizontal"
        />

</RelativeLayout>